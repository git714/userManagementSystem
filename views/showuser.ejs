<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>All users</title>
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
    integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>

<body>
  <div class="container-fluid">
    
  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Sno.</th>
        <th scope="col">FirstName</th>
        <th scope="col">LastName</th>
        <th scope="col">Email</th>
        <th scope="col">profile image</th>
        <th scope="col">change image</th>
        <th scope="col">Edit</th> 
        <th scope="col">Delete</th>
        <th scope="col"><a href="/users/add"><button class="btn-success">+ add new user</button></a></th>
        
      </tr>

    </thead>
    <tbody>
      <% var i=0; userData.forEach(function(result){ i=i+1; %>
        <tr>
          <th scope="row">
            <%=i%>
          </th>
          <td>
            <%=result.firstname%>
          </td>
          <td>
            <%=result.lastname%>
          </td>
          <td>
            <%=result.email%>
          </td>
          <td>
           <img src="/uploads/<%=result.file%>" width="100px" height="100px">
           
          </td>
          <td><a  href="/users/updateimage/<%=result._id%>" ><button class="btn-grey">change image</button></a></td>
          <td><a href="/users/update/<%=result._id%>" ><button class="btn-success" >Edit</button></a></td>
        
          <td><a href="/users/delete/<%=result._id%>"><button class="btn-danger" onclick="return confirm('are you sure?')">Delete</button></a></td>
          
        </tr>

    </tbody>
    <% }) %>
  </table>

  


</body>

</html>